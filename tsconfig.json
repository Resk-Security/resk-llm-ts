{
  "compilerOptions": {
    "target": "ES2016",                     
    "module": "CommonJS",                  
    "outDir": "./dist",                     
    "rootDir": "./src",                     
    "strict": true,                         
    "esModuleInterop": true,                
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    "declaration": true,                  
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"] 
} 